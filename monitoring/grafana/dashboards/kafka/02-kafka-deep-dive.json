{
  "uid": "kafka-deep-dive",
  "title": "Kafka Deep Dive",
  "tags": ["kafka"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "15s",
  "time": {"from": "now-1h", "to": "now"},
  "panels": [
    {
      "id": 1,
      "title": "Messages In / sec by Topic",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(kafka_server_broker_topic_metrics_messages_in_total[1m])",
          "legendFormat": "{{topic}}"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "ops"}}
    },
    {
      "id": 2,
      "title": "Consumer Lag by Topic",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "kafka_consumer_records_lag",
          "legendFormat": "{{topic}}[{{partition}}] - {{client_id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1000},
              {"color": "red", "value": 10000}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Bytes In / sec by Topic",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "rate(kafka_server_broker_topic_metrics_bytes_in_total[1m])",
          "legendFormat": "{{topic}}"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "bytes"}}
    },
    {
      "id": 4,
      "title": "Under-replicated Partitions",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "kafka_server_replica_manager_under_replicated_partitions",
          "legendFormat": "Under-replicated"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 1}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Offline Partitions",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
      "targets": [
        {
          "expr": "kafka_controller_offline_partitions_count",
          "legendFormat": "Offline"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 1}
            ]
          }
        }
      }
    }
  ]
}
