{
  "uid": "api-performance",
  "title": "API Performance",
  "tags": ["api", "graphql"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "15s",
  "time": {"from": "now-1h", "to": "now"},
  "panels": [
    {
      "id": 1,
      "title": "Request Rate by Operation",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(graphql_requests_total[1m])",
          "legendFormat": "{{operation_type}} / {{operation_name}} [{{status}}]"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "reqps"}}
    },
    {
      "id": 2,
      "title": "Latency Percentiles",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(graphql_request_duration_seconds_bucket[1m]))",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.95, rate(graphql_request_duration_seconds_bucket[1m]))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, rate(graphql_request_duration_seconds_bucket[1m]))",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "s"}}
    },
    {
      "id": 3,
      "title": "Error Rate (%)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "rate(graphql_errors_total[1m]) / rate(graphql_requests_total[1m]) * 100",
          "legendFormat": "Error Rate %"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 1},
              {"color": "red", "value": 5}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Cache Hit Rate (%)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "rate(graphql_cache_hits_total[1m]) / (rate(graphql_cache_hits_total[1m]) + rate(graphql_cache_misses_total[1m])) * 100",
          "legendFormat": "Cache Hit Rate %"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "percent", "max": 100}}
    },
    {
      "id": 5,
      "title": "Active Requests",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "graphql_active_requests",
          "legendFormat": "In-flight"
        }
      ]
    }
  ]
}
