{
  "uid": "infrastructure",
  "title": "Infrastructure",
  "tags": ["infrastructure", "host"],
  "timezone": "browser",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": {"from": "now-1h", "to": "now"},
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage by Host (%)",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "100 - (avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "percent", "max": 100}}
    },
    {
      "id": 2,
      "title": "Memory Available",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "node_memory_MemAvailable_bytes",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "bytes"}}
    },
    {
      "id": 3,
      "title": "Disk Available",
      "type": "stat",
      "gridPos": {"h": 4, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "node_filesystem_avail_bytes{fstype!~\"tmpfs|overlay\"}",
          "legendFormat": "{{instance}} {{mountpoint}}"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "bytes"}}
    },
    {
      "id": 4,
      "title": "Container CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{name!=\"\"}[1m]) * 100",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "percent"}}
    },
    {
      "id": 5,
      "title": "Container Memory Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name!=\"\"}",
          "legendFormat": "{{name}}"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "bytes"}}
    },
    {
      "id": 6,
      "title": "Network I/O",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[1m])",
          "legendFormat": "rx {{instance}} {{device}}"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[1m])",
          "legendFormat": "tx {{instance}} {{device}}"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "Bps"}}
    }
  ]
}
