# Superset environment variables
# Copy to .env and fill in the values before running docker-compose up

# ─── Security ─────────────────────────────────────────────────────────────────
SUPERSET_SECRET_KEY=change-me-to-a-long-random-string-in-production
SUPERSET_ADMIN_PASSWORD=admin

# ─── Database ─────────────────────────────────────────────────────────────────
SUPERSET_DB_USER=superset
SUPERSET_DB_PASSWORD=superset_password

# ─── Redis ────────────────────────────────────────────────────────────────────
REDIS_HOST=superset-redis
REDIS_PORT=6379
REDIS_DB=0

# ─── Email / SMTP (for scheduled reports) ─────────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_MAIL_FROM=trade-analytics@example.com

# ─── Slack (for alert notifications) ─────────────────────────────────────────
SLACK_API_TOKEN=

# ─── Embedding ────────────────────────────────────────────────────────────────
GUEST_TOKEN_SECRET=change-me-guest-token-secret

# ─── DuckDB / Iceberg ─────────────────────────────────────────────────────────
ICEBERG_CATALOG_URI=http://iceberg-rest:8181
DUCKDB_MEMORY_LIMIT=4GB
